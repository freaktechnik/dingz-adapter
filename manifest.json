{
    "manifest_version": 1,
    "id": "dingz-adapter",
    "name": "Dingz",
    "short_name": "Dingz",
    "version": "0.4.0",
    "description": "Adapter for Dingz pucks",
    "homepage_url": "https://github.com/freaktechnik/dingz-adapter",
    "license": "MIT",
    "author": "Martin Giger",
    "gateway_specific_settings": {
        "webthings": {
            "exec": "{nodeLoader} {path}",
            "strict_min_version": "0.10.0",
            "strict_max_version": "*",
            "primary_type": "adapter"
        }
    },
    "options": {
        "schema": {
            "type": "object",
            "required": [
                "poll_interval"
            ],
            "properties": {
                "poll_interval": {
                    "type": "integer",
                    "minimum": 1,
                    "title": "Polling interval (s)",
                    "step": 1,
                    "default": 3
                }
            }
        }
    }
}
